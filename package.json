{
  "name": "logam-task-manager",
  "version": "1.0.0",
  "description": "Task Management Application - Web & Desktop",
  "author": "Your Name or Organization",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "dev:electron": "next dev",
    "build": "next build",
    "build:export": "next build",
    "start": "next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev:electron\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build:export && electron-builder",
    "dist": "npm run build:export && electron-builder --publish=never",
    "dist-mac": "npm run build:export && electron-builder --mac",
    "dist-win": "npm run build:export && electron-builder --win",
    "dist-linux": "npm run build:export && electron-builder --linux",
    "clean:win": "powershell -Command \"if (Test-Path .next) { Remove-Item .next -Recurse -Force }; if (Test-Path out) { Remove-Item out -Recurse -Force }; if (Test-Path dist) { Remove-Item dist -Recurse -Force }\"",
    "fresh-install:win": "powershell -Command \"if (Test-Path node_modules) { Remove-Item node_modules -Recurse -Force }; if (Test-Path package-lock.json) { Remove-Item package-lock.json -Force }\" && npm install",
    "test-web": "npm run dev",
    "test-desktop": "npm run electron-dev",
    "test-dev": "node --version && npm run dev",
    "rebuild": "powershell -Command \"if (Test-Path dist) { Remove-Item dist -Recurse -Force }\" && npm run dist",
    "migrate:sheets": "node scripts/migrate-user.mjs",
    "pre-migration-test": "node scripts/pre-migration-test.js",
    "migrate": "node scripts/migrate-to-firebase.js",
    "test-firebase": "node scripts/simple-firebase-test.js",
    "simple-test": "node scripts/simple-migration-test.js",
    "populate-clients": "node scripts/populate-clients-from-tasks.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "ffmpeg-static": "^5.2.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "fluent-ffmpeg": "^2.1.3",
    "formidable": "^3.5.4",
    "googleapis": "^129.0.0",
    "intro.js": "^8.3.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.300.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "next": "^14.0.4",
    "next-auth": "^4.24.5",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.logamacademy.taskmanager",
    "productName": "Logam Task Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
